<Section_header>:
    id: section_header_id
    size_hint: 1, 0.1
    id: right_button2

    MDBoxLayout:

        orientation: "horizontal"
        size: root.width, root.height

        MDFloatLayout:
            Section_header_return_button:
                id: my_left_but

        MDFloatLayout:
            id: layout2
            MDTextButton:
                id: text_obj

                font_size: '20sp'  # Ustawienie rozmiaru czcionki
                bold: True

                size_hint_x: None
                text: root.header_text
                pos_hint: {'center_x': 0+0.5, 'center_y': 0.5}
                ## root.header_text, to jest argument klasy Section_header,
                ## root swoja droga odwoluje sie do Section_header

        MDFloatLayout:
            id: right_button

#            padding: 20


<Section_header_return_button>:
    text: root.but_text

    theme_text_color: "Custom"
    text_color: app.theme_cls.primary_color

    size_hint_x: None
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    on_release:
        root.return_to_last_section()
#        if app.root.current != my_section:/
#            app.root.transition.direction = 'left'/
#            app.root.current =

<Section_header_right_button>:
    text: root.button_text