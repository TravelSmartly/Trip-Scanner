<Section_header>:
    size_hint: 1, 0.1
    BoxLayout:
        orientation: "horizontal"
        size: root.width, root.height
        BoxLayout:
            Section_header_return_button:
        Label:
            id: text_obj
            color: 0,0,0,1
            ## root.header_text, to jest argument klasy Section_header,
            ## root swoja droga odwoluje sie do Section_header
            text: root.header_text
        BoxLayout:
            Section_header_right_button:


<Section_header_return_button>:
    text:"Hello"
    on_release:
        root.return_to_last_section()
#        if app.root.current != my_section:/
#            app.root.transition.direction = 'left'/
#            app.root.current =


<Section_header_right_button>:
    text: "Set profile"
    on_release:
        app.root.previous_object = app.root.current
        app.root.current = "set_profile_section"